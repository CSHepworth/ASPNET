@model Survey

<form method="post" asp-action="Submit" asp-controller="Home" style="display: flex; flex-direction: column; gap: 20px;">
    <div class="form-group">
        <span asp-validation-for="Username"></span>
        <label asp-for="Username">Username:</label>
        <input class="form-control" asp-for="Username">
    </div>
        <div class="form-group">
        <span asp-validation-for="Location"></span>
        <label asp-for="Location">Location:</label>
        <input class="form-control" asp-for="Location">
    </div>
        <div class="form-group">
        <span asp-validation-for="FavoriteLanguage"></span>
        <label asp-for="FavoriteLanguage">Favorite Language:</label>
        <select class="form-control" asp-for="FavoriteLanguage">
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="JavaScript">JavaScript</option>
            <option value="Python">Python</option>
        </select>
        
    </div>
        <div class="form-group">
        <span asp-validation-for="Comments"></span>
        <label asp-for="Comments">Comments:</label>
        <textarea class="form-control" asp-for="Comments" cols="30" rows="10"></textarea>
    </div>
    <input type="submit" value="Submit">
</form>